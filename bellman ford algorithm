#include <stdio.h>
#include <limits.h>

#define V 5      // Number of vertices
#define E 8      // Number of edges

// Structure to represent an edge
struct Edge {
    int src, dest, weight;
};

void bellmanFord(struct Edge edge[], int source) {
    int dist[V];
    
