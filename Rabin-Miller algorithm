#include <iostream>
#include <cstdlib>
using namespace std;

// Function to perform modular exponentiation (a^d % n)
long long power(long long a, long long d, long long n) {
    long long result = 1;
    a = a % n;

    while (d > 0) {
        if (d % 2 == 1)
            result = (result * a) % n;

        a = (a * a) % n;
        d /= 2;
    }
    return result;
}

// Miller-Rabin test for one iteration
bool millerTest(long long d, long long n) {
    long long a = 2 + rand() % (n - 4); // Random number in [2, n-2]
    long long x = power(a, d, n);

    if (x == 1 || x == n - 1)
        return true;

    while (d != n - 1) {
        x = (x * x) % n;
        d *= 2;

        if (x == 1)
            return false;
        if (x == n - 1)
            return true;
    }
    return false;
}
// Main Miller-Rabin function
bool isPrime(long long n, int k) {
    if (n <= 1 || n == 4)
        return false;
    if (n <= 3)
        return true;

    long long d = n - 1;
    while (d % 2 == 0)
        d /= 2;

    for (int i = 0; i < k; i++)
        if (!millerTest(d, n))
            return false;
int main() {
    long long n;
    int k = 5; // Number of iterations (accuracy level)

    cout << "Enter number to test: ";
    cin >> n;

    if (isPrime(n, k))
        cout << n << " is Probably Prime\n";
    else
        cout << n << " is Composite\n";

    return 0;
}

    return true;
}

