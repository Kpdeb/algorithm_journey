#include <iostream>
#include <cstdlib>
using namespace std;

// Function to perform modular exponentiation (a^d % n)
long long power(long long a, long long d, long long n) {
    long long result = 1;
    a = a % n;

    while (d > 0) {
        if (d % 2 == 1)
            result = (result * a) % n;

        a = (a * a) % n;
        d /= 2;
    }
    return result;
}

