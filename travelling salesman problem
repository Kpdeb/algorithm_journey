#include <stdio.h>
#include <limits.h>

#define N 4   // Number of cities

int dist[N][N] = {
    {0, 10, 15, 20},
    {10, 0, 35, 25},
    {15, 35, 0, 30},
    {20, 25, 30, 0}
};

int dp[1 << N][N];

// Function to find minimum cost
int tsp(int mask, int pos) {
    // If all cities are visited
    if (mask == (1 << N) - 1) {
        return dist[pos][0];  // Return to starting city
    }

    // If already computed
    if (dp[mask][pos] != -1)
        return dp[mask][pos];

    int ans = INT_MAX;

    // Try all cities
    for (int city = 0; city < N; city++) {
        if ((mask & (1 << city)) == 0) {
            int newAns = dist[pos][city] +
                         tsp(mask | (1 << city), city);

            if (newAns < ans)
                ans = newAns;
        }
    }

    dp[mask][pos] = ans;
    return ans;
}
