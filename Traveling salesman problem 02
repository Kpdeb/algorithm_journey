#include <stdio.h>
#include <limits.h>

#define MAX 20   // maximum cities allowed

int n;
int dist[MAX][MAX];
int dp[1 << MAX][MAX];

/* TSP function */
int tsp(int mask, int pos) {
    // If all cities are visited
    if (mask == (1 << n) - 1) {
        return dist[pos][0];   // return to starting city
    }

    // If already calculated
    if (dp[mask][pos] != -1)
        return dp[mask][pos];

    int ans = INT_MAX;

    for (int city = 0; city < n; city++) {
        // If city not visited
        if ((mask & (1 << city)) == 0) {
            int newAns = dist[pos][city] +
                         tsp(mask | (1 << city), city);

            if (newAns < ans)
                ans = newAns;
        }
    }

    dp[mask][pos] = ans;
    return ans;
}
